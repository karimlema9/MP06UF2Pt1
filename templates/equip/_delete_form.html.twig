<form method="post" action="{{ path('equip_delete', {'id': equip.id}) }}" onsubmit="return confirm('Esteu segur que voleu suprimir aquest element?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equip.id) }}">
    <button class="btn">Eliminar</button>
</form>
